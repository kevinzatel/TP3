<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicianLandingActivity">

    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:layout_marginTop="49dp"
        android:textAllCaps="false"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bienvenido Nombre!" />

    <Button
        android:id="@+id/btLogout"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"
        android:text="Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btSolicitudes" />

    <Button
        android:id="@+id/btEditPerfil"
        android:layout_width="178dp"
        android:layout_height="59dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/custom_button"
        android:text="Editar Perfil"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTxt" />

    <Button
        android:id="@+id/btFindBanda"
        android:layout_width="178dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button"
        android:text="Buscar Banda"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEditPerfil" />

    <Button
        android:id="@+id/btSolicitudes"
        android:layout_width="178dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button"
        android:text="Mis Solicitudes"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btFindBanda" />
</androidx.constraintlayout.widget.ConstraintLayout>